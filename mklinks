#!/usr/bin/perl
use Cwd;
my $dir = getcwd();
my $links = {
    'bin/pre-commit' => '.git/hooks/pre-commit',
};
while ( my ($key, $val) = each (%$links) ) {
    if ( -e $dir . '/' . $val) {
        print "Exists: $val\n";
    } else {
        symlink($dir . '/' . $key, $dir . '/' . $val);
        print "Linking $key to $val\n";
    }
}

