# sh-alias-portable

alias d="git diff --word-diff --no-prefix"
alias g='git'
alias man="LC_ALL=C man"
alias kj="killall -9 java"
alias ll='ls -l --color=auto'
alias ls='ls --color=auto'
alias varnishadm="rlwrap -pgreen -S'varnish> ' varnishadm"
alias va='vagrant'
alias sqlite="sqlite3"
alias tdump='tcpdump -i any -s 0 -n -U -Z root -C 108 -W 5 -w dump_$(hostname)_$(date +%F_%T).'
alias se='service'
alias dk='docker'
alias sctl='systemctl'
if [ "$USER" = "root" ] ; then
    alias tcpdump='tcpdump -n -s 0'
else
    alias tcpdump='sudo tcpdump -n -s 0'
fi

<% if $operatingsystem == 'CentOS' and $lsbmajdistrelease <= 6 %>
alias mtrr='mtr -r -w'
<% else %>
alias mtrr='mtr -r -w -b'
<% end %>
