[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    commit = cyan bold
    meta = yellow
    frag = magenta bold
    old = bold red
    new = bold green
    func = bold white
    whitespace = red reverse
[color "status"]
    # in index
    added   = bold green
    # changed but not in index
    changed = bold yellow
    #
    untracked = bold magenta
    branch = bold green
    nobranch = bold red

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less
    editor = e
    excludesfile = ~/.gitignore_global

[push]
    default = current

[svn]
    authorsfile = /home/xani/src/users_svn.txt

[branch]
    autosetupmerge = true

[alias]
    c = commit -v <% if @gpgid  %> -S <% end %>
    # cleanup everything but tags, ask
    cleanup = "!git remote prune origin;git clean -i -x -d -e 'TAGS' -e 'tags' ; git fetch -p"
    cm = commit --author \"Mariusz Gronczewski <xani666@gmail.com>\"<% if @gpgid %> -S <% end %>
    co = checkout
    cx = commit -v <% if @gpgid != false %> -S <% end %>
    d = diff --word-diff -C -M
    l = log -30  --abbrev-commit --relative-date --format='%Cred%h%Cgreen %aN%Cblue %ar %Creset%x09 %s'
    lo = log -30  --abbrev-commit --relative-date --format='%Cred%h%Cgreen %aN%Cblue %ar %Creset%x09 %s' --stat-count=7
    me = merge <% if @gpgid %> -S <% end %>
    p = !git pull --no-commit && git push -u
    pop = stash pop
    re = reset HEAD~1
    s = status -s -b
    st = !git fetch -p && git status -s -b

[merge]
    tool = meld

[rerere] # ooo macarena
    enabled = true

[status]
    relativePaths = true

[grep]
    patternType = perl

[rebase]
    autoStash = true

